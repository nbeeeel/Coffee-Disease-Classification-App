<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <TextView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/TextTitle"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Recommendations For Treatment"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textAlignment="center"/>


     <Button
         android:layout_width="250dp"
         android:layout_height="50dp"
         android:layout_marginTop="180dp"
         android:textAlignment="center"
         android:layout_centerHorizontal="true"
         android:background="@drawable/btn_bg"
         android:textColor="@color/white"
         android:textSize="25dp"
         android:textStyle="bold"
         android:text="Cerscospora"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="270dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_bg"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Wilt"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="370dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_bg"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Rust"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="470dp"
        android:textAlignment="center"
        android:id="@+id/phoma"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_bg"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Phoma"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="550dp"
        android:background="@color/white"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/phoma"
        android:id="@+id/omdena1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/omdena" />

    <TextView
        android:id="@+id/Recommendations"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/omdena1"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:includeFontPadding="true"
        android:text="Ethiopian Chapter"
        android:textColor="#FF6200EE"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>